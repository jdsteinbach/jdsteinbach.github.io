{
  "options": {
    "merge-default-rules": true,
    "max-warnings": 50
  },
  "files": {
    "include": "sass/**/*.s+(a|c)ss",
    "ignore": [
      "sass/vendor/**/*.*"
    ]
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq",
          "haf",
          "bp"
        ]
      }
    ],
    "no-warn": 0,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "class-name-format": [
      1,
      {
        convention: "strictbem"
      }
    ],
    "force-element-nesting": 0,
    "force-pseudo-nesting": 0,
    "hex-notation": [
      2,
      {
        "style": "uppercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": 2
      }
    ],
    "quotes": [
      1,
      {
        "style": "double"
      }
    ],
    "property-sort-order": [
      0,
      {}
    ],
    "variable-for-property": [
      1,
      {
        "properties": [
          "color"
        ]
      }
    ]
  }
}
