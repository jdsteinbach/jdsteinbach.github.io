<header class="hero l-hero">
  <h1 class="hero__title{{ title | title_class }}">{{ title | no_orphan }}</h1>
  <svg class="hero__bg starfield" aria-hidden="true" focusable="false" role="presentation" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 1000" preserveAspectRatio="xMidYMid slice">
    <filter id="blur">
      <feGaussianBlur in="SourceGraphic" stdDeviation=".5" />
    </filter>
    <rect class="starfield__bg" x="0" y="0" width="1000" height="1000" />
    {% for i in (1..5) %}
      <g class="starfield__layer">
        {% for i in (1..30) %}
          {% assign x = 1000 | random %}
          {% assign y = 1000 | random %}
          {% assign scale = 1 | random | plus: .5 %}
          <path
            class="starfield__star"
            d="m{{x}},{{y}}l2,2l-2,2l-2,-2z"
            transform="scale({{scale}})"
          />
        {% endfor %}
      </g>
    {% endfor %}
  </svg>
</header>
